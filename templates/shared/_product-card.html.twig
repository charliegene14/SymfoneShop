<div class="card">
	<img src="{{mainPicture}}" alt="{{productName}}" class="img-fluid">
	<div class="card-body">
		<span class="badge bg-light mb-2">{{categoryName}}</span>
		<h2 class="card-title">{{productName}}</h2>
		<h3>{{price / 100}}&euro;</h3>
		<p class="card-text">{{shortDescription}}</p>
		<a href="{{ urlShow }}" class="btn btn-primary btn-sm">Voir le produit.</a>
		<a href="#" class="btn btn-success btn-sm">Ajouter au panier.</a>
	</div>
</div>
